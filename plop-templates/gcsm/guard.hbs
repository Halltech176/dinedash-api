import { PermType, isPermitted } from '.';
import { UserType } from '../models/userModel';

export const canCreate{{fcapitalize name}} = async (user: UserType): Promise<PermType> => {
  const canCreate = await isPermitted(user, 'create:{{lowerCase name}}');
  return {
    ...canCreate,
  };
};

